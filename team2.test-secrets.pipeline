---
resources:
- name: every5min
  type: time
  source: {interval: 5m}
  
jobs:
  - name: pipeline-secret
    plan:
      - get: every5min
        trigger: true
      - task: echo-pipeline-secret
        config:
          platform: linux
          image_resource:
            type: registry-image
            source: { repository: busybox }
          run:
            path: echo
            args: [((pipeline-secret))]

  - name: team-secret
    plan:
      - get: every5min
        trigger: true
      - task: echo-team-secret
        config:
          platform: linux
          image_resource:
            type: registry-image
            source: { repository: busybox }
          run:
            path: echo
            args: [((team-secret))]

  - name: concourse-secret
    plan:
      - get: every5min
        trigger: true
      - task: echo-concourse-secret
        config:
          platform: linux
          image_resource:
            type: registry-image
            source: { repository: busybox }
          run:
            path: echo
            args: [((concourse-secret))]
